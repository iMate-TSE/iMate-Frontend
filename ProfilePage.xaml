<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iMate.ProfilePage"
             Title="Profile">
    <!--        ^ This should probably bind the username rather than just saying "Profile" -->
    <VerticalStackLayout>
        <Label 
            Text="Welcome to your Profile"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

       <!-- Temporary button added so that settings can be accessed during implementation --> 
        <Button
            Text="Temp Button for Settings"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="NavigateSettings" />

    </VerticalStackLayout>
</ContentPage>