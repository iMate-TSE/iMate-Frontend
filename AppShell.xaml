<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="iMate.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:iMate"
    Shell.FlyoutBehavior="Disabled"
    Title="iMate"
    BackgroundColor="{DynamicResource Platinum}"
    Shell.TabBarBackgroundColor="{DynamicResource Platinum}"
   >

    <TabBar>

        <ShellContent
            Title="TEMP:LOGIN"
            Icon="{FontImage FontFamily=AveriaRegular}"
            ContentTemplate="{DataTemplate local:LoginPage}"
            Route="LoginPage"
        />

        <ShellContent
            Title="tasks"
            Icon="{FontImage FontFamily=AveriaRegular}"
            ContentTemplate="{DataTemplate local:TaskPage}"
            Route="TaskPage"
        />
        <ShellContent
            Title="home"
            Icon="{FontImage FontFamily=AveriaRegular}"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
        />
        <ShellContent
            Title="journal"
            Icon="{FontImage FontFamily=AveriaRegular}"
            ContentTemplate="{DataTemplate local:JournalPage}"
            Route="JournalPage"
         />

    </TabBar>

</Shell>
